<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/senderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textColor="@color/secondaryColor"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/receivedMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/senderName"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/received_bubble_tail"
        android:text="vghfbdyuhlgysihyufgydgyuhgyufguigyighuilfgukgfyuhfgyghyighyughyugyghyighyhfbyiwgyu"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:maxWidth="300dp"/>

    <ImageView
        android:id="@+id/reportIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/receivedMessageText"
        app:layout_constraintTop_toTopOf="@id/receivedMessageText"
        app:layout_constraintBottom_toBottomOf="@id/receivedMessageText"
        android:src="@drawable/report"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/receivedMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/receivedMessageText"
        app:layout_constraintStart_toStartOf="@id/receivedMessageText"
        android:text="@string/_10_20"
        android:textSize="12sp"
        android:textColor="@color/secondaryColor"
        android:layout_marginTop="1dp"
        android:layout_marginStart="7dp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>